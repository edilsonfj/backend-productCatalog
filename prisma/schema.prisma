generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int         @id
  categories  Category[]
  name        String
  description String
  barcode     String
  price       Float
  promotion   Promotion[]
  createdAt   DateTime
  updatedAt   DateTime
  deletedAt   DateTime

  @@map("products")
}

model Category {
  id        Int       @id
  products  Product[]
  name      String
  createdAt DateTime
  updatedAt DateTime
  deletedAt DateTime

  @@map("categories")
}

model Promotion {
  id        Int       @id
  products  Product[]
  name      String
  discount  Float
  createdAt DateTime
  updatedAt DateTime
  deletedAt DateTime

  @@map("promotions")
}
